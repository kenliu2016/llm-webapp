# Environment Configuration
NODE_ENV=development
PORT=3002

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_chat_app
DB_USER=postgres
DB_PASSWORD=

# Database Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_STATEMENT_TIMEOUT=60000
DB_QUERY_TIMEOUT=30000

# Legacy Database URL (for compatibility)
DATABASE_URL=postgresql://postgres@localhost:5432/llm_chat_app
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=llm_chat_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=5000
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_change_this_in_production
REFRESH_TOKEN_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_change_this_in_production

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=https://chipfoundryservices.com,https://www.chipfoundryservices.com,http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12

# Production Settings
TRUST_PROXY=1
